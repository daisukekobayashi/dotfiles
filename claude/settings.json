{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "DISABLE_AUTOUPDATER": "1",
    "MCP_TIMEOUT": "30000"
  },
  "permissions": {
    "deny": [
      "Read(./.env)",
      "Read(./.env.*)",
      "Read(./secrets/**)"
    ]
  },
  "model": "opusplan",
  "enabledMcpjsonServers": [
    "github",
    "playwright",
    "markitdown",
    "serena",
    "context7"
  ],
  "enabledPlugins": {
    "claude-mem@thedotmack": true
  }
}
